<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../common.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <!-- <CapnpPackageReferenceVersion>1.2.189</CapnpPackageReferenceVersion> -->
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Capnp.Net.Runtime" Version="1.2.189" />
    <PackageReference Include="CapnpC.CSharp.MsBuild.Generation" Version="1.2.138" />
    <PackageReference Include="CliWrap" Version="3.0.0-alpha3" />

    <ProjectReference Include="../core/core.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <Content Include="/usr/bin/capnp" Condition="'$(OS)' == 'Unix'">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="/usr/lib/x86_64-linux-gnu/libcapnp*.so" Condition="'$(OS)' == 'Unix'">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="/usr/lib/x86_64-linux-gnu/libkj-*.so" Condition="'$(OS)' == 'Unix'">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>

    <Content Include="schema/**">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

</Project>
